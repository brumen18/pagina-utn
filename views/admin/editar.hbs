    <h1>Editar artículo</h1>
    <form class="formulario1"  action="/admin/editar" method="post">
    {{#each texto}}
    <label>Título del artículo</label>
    <input type="text" name="titulo" maxlength="60" id="titulo" value="{{titulo}}" placeholder="título" required>
    <label>Cuerpo del artículo</label>
            <textarea name="cuerpo" id="cuerpo" rows="3" placeholder="Cuerpo">{{cuerpo}}</textarea>
            <input type="submit" value="Actualizar artículo">
                {{/each}}
    </form>
    {{#if isEditado}}
    <p>El artículo se editó correctamente.</p>
    <a href="/admin/tib">Visita los temas de interés.</a>
    {{/if}}
    {{#if isErrored}}
    <p style="margin-top: 5px; color: #ff0000;">ERROR</p>
  <p style="color: #ff0000;">El artículo no pudo ser actualizado. Volvé a intentarlo más tarde.</p>
    {{/if}}

           <script type="application/javascript" src= "/tinymce/tinymce.min.js"></script>
    <script>
         tinymce.init({
   selector: 'textarea#cuerpo',
   language: 'es_MX',
   height: 250,
   menubar: false,
   plugins: [
     'advlist autolink lists link image charmap print preview anchor',
     'searchreplace visualblocks code fullscreen',
     'insertdatetime media table paste code help wordcount'
   ],
   toolbar: 'undo redo | formatselect | ' +
   'bold italic backcolor | alignleft aligncenter ' +
   'alignright alignjustify | bullist numlist outdent indent | ' +
   'removeformat | help'
 });
    </script>
